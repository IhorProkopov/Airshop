<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Air Shop</display-name>
    <context-param>
        <param-name>db_username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db_pass</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>dao</param-name>
        <param-value>db</param-value>
    </context-param>
    <context-param>
        <param-name>captchaType</param-name>
        <param-value>cookie</param-value>
    </context-param>
    <context-param>
        <param-name>lifeTime</param-name>
        <param-value>600000</param-value>
    </context-param>
    <context-param>
        <param-name>directory</param-name>
        <param-value>D:\\photo\\</param-value>
    </context-param>
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.captcha.CaptchaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AvatarServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.AvatarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoodsServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.GoodsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.FilterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartAddingServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.CartAddingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SortServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.SortingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetFilterServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.ResetSortingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserCheckerServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.UserCheckerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartRemovingServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.CartRemovingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyingServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.BuyingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetProductServlet</servlet-name>
        <servlet-class>com.epam.prokopov.shop.controller.CartSetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetProductServlet</servlet-name>
        <url-pattern>/setproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyingServlet</servlet-name>
        <url-pattern>/buyingpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartRemovingServlet</servlet-name>
        <url-pattern>/removefromcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserCheckerServlet</servlet-name>
        <url-pattern>/checkuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetFilterServlet</servlet-name>
        <url-pattern>/resetsort</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/captcha-image.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AvatarServlet</servlet-name>
        <url-pattern>/avatar.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoodsServlet</servlet-name>
        <url-pattern>/goods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterServlet</servlet-name>
        <url-pattern>/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartAddingServlet</servlet-name>
        <url-pattern>/addtocart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SortServlet</servlet-name>
        <url-pattern>/sort</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>com.epam.prokopov.shop.controller.listener.ApplicationContextListener</listener-class>
    </listener>
    <jsp-config>
        <taglib>
            <taglib-uri>http://www.shop.com/captcha</taglib-uri>
            <taglib-location>
                /WEB-INF/tlds/Captcha.tld
            </taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://www.shop.com/categoriescheckbox</taglib-uri>
            <taglib-location>
                /WEB-INF/tlds/CategoriesCheckbox.tld
            </taglib-location>
        </taglib>
    </jsp-config>
    <filter>
        <filter-name>GzipFilter</filter-name>
        <filter-class>com.epam.prokopov.shop.controller.filter.GZipFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GzipFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>TimeFilter</filter-name>
        <filter-class>com.epam.prokopov.shop.controller.filter.GenerationTimeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TimeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.epam.prokopov.shop.controller.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>com.epam.prokopov.shop.controller.filter.locale.LocaleFilter</filter-class>
        <init-param>
            <param-name>manager</param-name>
            <param-value>cookie</param-value>
        </init-param>
        <init-param>
            <param-name>locales</param-name>
            <param-value>en,ru</param-value>
        </init-param>
        <init-param>
            <param-name>lifeTime</param-name>
            <param-value>6000000</param-value>
        </init-param>
        <init-param>
            <param-name>default_locale</param-name>
            <param-value>en</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.epam.prokopov.shop.controller.filter.SecurityFilter</filter-class>
        <init-param>
            <param-name>security.xml</param-name>
            <param-value>/WEB-INF/security.xml</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>